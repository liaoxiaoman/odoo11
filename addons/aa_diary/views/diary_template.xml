<?xml version="1.0" encoding="utf-8"?>
<odoo>


<!-- Page -->
<template id="index" name="日记">
    <t t-call="website.layout">
        <div id="wrap">
            <table style="table-layout:fixed">
                <thead>
                    <th width="200">内容</th>
                    <th width="100">日期</th>
                    <th width="100">作者</th>
                </thead>
                <tbody>
                    <tr t-foreach="diarys" t-as="diary">
                        <td width="60%" style="word-break : break-all; ">
                            <a t-att-href="'/get_details/%s' % (diary.get('id'))">
                                <span t-esc="diary.get('text')"/>
                            </a>
                        </td>
                        <td><span t-esc="diary.get('date')"/></td>
                        <td><span t-esc="diary.get('user')"/></td>
                    </tr>
                </tbody>
            </table>
            <br/>
            <br/>
            <br/>
            <form action="/diary" method="post" role="form">
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                <div class="input_row">
                    <textarea class="form-control" id="text" name="text" placeholder="记录新的一天吧" required="required"/>
                </div>
                <!--确认按钮-->
                <br/>
                <br/>
                <br/>
                <br/>
                <br/>
                <br/>
                <br/>
                <br/>
                <br/>
                <br/>
                <button class="btn btn-default btn-primary">添加</button>
            </form>
            <style type="text/css">
                #wrap {
                margin:20px;
                }
                .input_row {
                margin-top:20px;
                height:30px;
                }
                .input_row textarea {
                height: 200px;
                width: 80%;
                }
            </style>
        </div>
    </t>
</template>



</odoo>
