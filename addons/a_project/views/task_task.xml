<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_task_task_tree" model="ir.ui.view">
            <field name="name">任务tree视图</field>
            <field name="model">task.task</field>
            <field name="arch" type="xml">
                <tree string="任务">
                    <field name="task_project"/>
                    <field name="act_user"/>
                    <field name="check_user"/>
                    <field name="plan_date"/>
                    <field name="priority"/>
                    <field name="type"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_task_task_form" model="ir.ui.view">
            <field name="name">任务form视图</field>
            <field name="model">task.task</field>
            <field name="arch" type="xml">
                <form string="任务">
                    <header>
                        <button name="done" states="a" string="完成" type="object" class="oe_highlight"/>
                        <button name="commit" states="b" string="提交" type="object" class="oe_highlight"/>
                        <button name="click_pass" states="c" string="通过" type="object" class="oe_highlight"/>
                        <button name="click_reject" states="c" string="驳回" type="object" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="a,b,c,d" readonly="1"/>
                    </header>
                    <sheet>
                        <group col="4">
                            <field name="task_project"/>
                            <field name="act_user"/>
                            <field name="check_user"/>
                            <field name="plan_date"/>
                            <field name="priority"/>
                            <field name="type"/>
                        </group>
                        <group>
                            <field name="task_description"/>
                            <field name="note"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_task_task" model="ir.actions.act_window">
            <field name="name">任务</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">task.task</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record id="action_task_task_tree_view" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_task_task_tree"/>
            <field name="act_window_id" ref="action_task_task"/>
        </record>
        <record id="action_task_task_form_view" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_task_task_form"/>
            <field name="act_window_id" ref="action_task_task"/>
        </record>


        <record id="view_task_project_tree" model="ir.ui.view">
            <field name="name">项目tree视图</field>
            <field name="model">task.project</field>
            <field name="arch" type="xml">
                <tree string="项目">
                    <field name="name"/>
                    <field name="manager"/>
                </tree>
            </field>
        </record>

        <record id="view_task_project_form" model="ir.ui.view">
            <field name="name">项目form视图</field>
            <field name="model">task.project</field>
            <field name="arch" type="xml">
                <form string="项目">
                    <sheet>
                        <group col="4">
                            <field name="name"/>
                            <field name="manager"/>
                        </group>
                        <group>
                            <field name="note"/>
                            <field name="des_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_task_project" model="ir.actions.act_window">
            <field name="name">项目</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">task.project</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record id="action_task_project_tree_view" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_task_project_tree"/>
            <field name="act_window_id" ref="action_task_project"/>
        </record>
        <record id="action_task_project_form_view" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_task_project_form"/>
            <field name="act_window_id" ref="action_task_project"/>
        </record>

        <record id="view_task_project_des_tree" model="ir.ui.view">
            <field name="name">进度tree视图</field>
            <field name="model">task.project.des</field>
            <field name="arch" type="xml">
                <tree string="进度">
                    <field name="date"/>
                    <field name="des"/>
                </tree>
            </field>
        </record>

        <record id="view_task_project_des_form" model="ir.ui.view">
            <field name="name">进度form视图</field>
            <field name="model">task.project.des</field>
            <field name="arch" type="xml">
                <form string="进度">
                    <sheet>
                        <group col="4">
                            <field name="date"/>
                            <field name="des"/>
                        </group>
                        <group>
                            <field name="note"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_task_project_des" model="ir.actions.act_window">
            <field name="name">进度</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">task.project.des</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record id="action_task_project_des_tree_view" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_task_project_des_tree"/>
            <field name="act_window_id" ref="action_task_project_des"/>
        </record>
        <record id="action_task_project_des_form_view" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_task_project_des_form"/>
            <field name="act_window_id" ref="action_task_project_des"/>
        </record>

        <menuitem name="任务模块" id="menu_task_task_root"/>
            <menuitem name="任务菜单" id="menu_task_task_sub" parent="menu_task_task_root"/>
                <menuitem name="任务" id="menu_task_task" action="action_task_task" parent="menu_task_task_sub"/>
            <menuitem name="基础数据" id="menu_task_task_sub2" parent="menu_task_task_root"/>
                <menuitem name="项目" id="menu_task_project" action="action_task_project" parent="menu_task_task_sub2"/>
                <menuitem name="进度" id="menu_task_project_des" action="action_task_project_des" parent="menu_task_task_sub2"/>


    </data>
</odoo>
