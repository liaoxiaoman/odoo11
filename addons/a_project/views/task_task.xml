<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_task_task_tree" model="ir.ui.view">
            <field name="name">任务tree视图</field>
            <field name="model">task.task</field>
            <field name="arch" type="xml">
                <tree string="任务">
                    <field name="task_project"/>
                    <field name="act_user"/>
                    <field name="check_user"/>
                    <field name="plan_date"/>
                    <field name="priority"/>
                    <field name="type"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_task_task_form" model="ir.ui.view">
            <field name="name">任务form视图</field>
            <field name="model">task.task</field>
            <field name="arch" type="xml">
                <form string="任务">
                    <header>
                        <button name="done" states="a" string="完成" type="object" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="a,b,c,d" nolabel="1" readonly="1"/>
                    </header>
                    <sheet>
                        <group col="4">
                            <field name="task_project"/>
                            <field name="act_user"/>
                            <field name="check_user"/>
                            <field name="plan_date"/>
                            <field name="priority"/>
                            <field name="type"/>
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="task_description"/>
                            <field name="note"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_task_task" model="ir.actions.act_window">
            <field name="name">任务</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">task.task</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record id="action_task_task_tree_view" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_task_task_tree"/>
            <field name="act_window_id" ref="action_task_task"/>
        </record>
        <record id="action_task_task_form_view" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_task_task_form"/>
            <field name="act_window_id" ref="action_task_task"/>
        </record>














        <record id="view_task_task1_tree" model="ir.ui.view">
            <field name="name">任务tree视图</field>
            <field name="model">task.task</field>
            <field name="arch" type="xml">
                <tree string="任务">
                    <field name="task_project"/>
                    <field name="act_user"/>
                </tree>
            </field>
        </record>

        <record id="view_task_task1_form" model="ir.ui.view">
            <field name="name">任务form视图</field>
            <field name="model">task.task</field>
            <field name="arch" type="xml">
                <form string="任务">
                    <sheet>
                        <group col="4">
                            <field name="task_project"/>
                            <field name="act_user"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_task_task1" model="ir.actions.act_window">
            <field name="name">任务</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">task.task</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record id="action_task_task1_tree_view" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_task_task1_tree"/>
            <field name="act_window_id" ref="action_task_task1"/>
        </record>
        <record id="action_task_task1_form_view" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_task_task1_form"/>
            <field name="act_window_id" ref="action_task_task1"/>
        </record>

        <menuitem name="任务模块" id="menu_task_task_root"/>
            <menuitem name="任务菜单" id="menu_task_task_sub" parent="menu_task_task_root"/>
                <menuitem name="任务" id="menu_task_task" action="action_task_task" parent="menu_task_task_sub"/>
                <menuitem name="任务1" id="menu_task_task1" action="action_task_task1" parent="menu_task_task_sub"/>


    </data>
</odoo>
