<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data noupdate="0">
    <record model="ir.module.category" id="a_project_category">
        <field name="name">项目权限</field>
        <field name="sequence">0</field>
        <field name="visible" eval="1" />
    </record>

    <record id="group_act_user" model="res.groups">
        <field name="name">执行人</field>
        <field name="category_id" ref="a_project_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_check_user" model="res.groups">
        <field name="name">审核人</field>
        <field name="category_id" ref="a_project_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="task_task_act_user_rule" model="ir.rule">
        <field name="name">执行人组对任务表的数据过滤</field>
        <field name="model_id" ref="model_task_task"/>
        <field name="global" eval="False"/>
        <field name="domain_force">[('act_user', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_act_user'))]"/>
    </record>

    <record id="task_task_check_user_rule" model="ir.rule">
        <field name="name">审核人组对任务表的数据过滤</field>
        <field name="model_id" ref="model_task_task"/>
        <field name="global" eval="False"/>
        <field name="domain_force">[('check_user', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_check_user'))]"/>
    </record>

</data>
</odoo>