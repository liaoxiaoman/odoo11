<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="aaa_test.list">
      <field name="name">aaa_test list</field>
      <field name="model">aaa_test.aaa_test</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" string="编号"/>
          <field name="value"/>
          <field name="value2"/>
          <field name="description"/>
          <field name="file"/>
          <field name="selection"/>
          <field name="bool"/>
          <field name="date"/>
          <field name="datetime"/>
          <field name="html"/>
          <field name="sub_id"/>
          <field name="sub2_id"/>
        </tree>
      </field>
    </record>

    <record id="aaa_test.form" model="ir.ui.view">
        <field name="name">aaa_test form</field>
        <field name="model">aaa_test.aaa_test</field>
        <field name="arch" type="xml">
            <form string="Expense Products">
                  <group col="8">
                    <field name="name"/>
                    <field name="selection"/>
                    <field name="value"/>
                    <field name="value2"/>
                    <field name="bool"/>
                    <field name="date"/>
                    <field name="sub_id"/>
                    <field name="sub2_id"/>
                  </group>
                  <notebook>
                    <page string="文件">
                      <group>
                        <field name="file"/>
                      </group>
                    </page>
                    <page string="描述">
                      <group>
                        <field name="description"/>
                      </group>
                    </page>
                  </notebook>
            </form>
        </field>
    </record>

    <record id="aaa_test.search" model="ir.ui.view">
        <field name="name">aaa_test search</field>
        <field name="model">aaa_test.aaa_test</field>
        <field name="arch" type="xml">
            <search string="Hr Attendance Search">
                <field name="name"/>
                <field name="value"/>
                <field name="date"/>


                <filter name="value" string="小于100" domain="[('value', '&lt;', 100)]" />


                <group expand="0" string="Group By">
                    <filter name="name" string="按名字分组" context="{'group_by':'name'}"/>
                    <filter name="value" string="值1" context="{'group_by':'value'}"/>
                    <separator/>
                    <filter name="date" string="日期" context="{'group_by':'date'}"/>
                </group>
            </search>
        </field>
    </record>



    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="aaa_test.action_window">
      <field name="name">aaa_test window</field>
      <field name="res_model">aaa_test.aaa_test</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- Top menu item -->

    <menuitem name="测试菜单" id="aaa_test.menu_root"/>
      <menuitem name="测试菜单" id="aaa_test_son" parent="aaa_test.menu_root"/>
        <menuitem name="测试子菜单" id="aaa_test_sub" action="aaa_test.action_window" parent="aaa_test_son"/>



    <record model="ir.ui.view" id="aaa_test_sub_list">
      <field name="name">aaa_test_sub list</field>
      <field name="model">aaa_test.aaa_test_sub</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
            <field name="code"/>
        </tree>
      </field>
    </record>

    <record id="aaa_test_sub_form" model="ir.ui.view">
        <field name="name">aaa_test_sub form</field>
        <field name="model">aaa_test.aaa_test_sub</field>
        <field name="arch" type="xml">
            <form string="Expense Products">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="aaa_test_sub_search" model="ir.ui.view">
        <field name="name">aaa_test_sub search</field>
        <field name="model">aaa_test.aaa_test_sub</field>
        <field name="arch" type="xml">
            <search string="Hr Attendance Search">
                <field name="name"/>
                <field name="code"/>
            </search>
        </field>
    </record>



    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="aaa_test_sub_action_window">
      <field name="name">aaa_test_sub window</field>
      <field name="res_model">aaa_test.aaa_test_sub</field>
        <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
        <field name="view_id" ref="aaa_test_sub_list"/>
    </record>


    <!-- Top menu item -->

        <menuitem name="子表配置" id="aaa_test_sub_setting" action="aaa_test_sub_action_window" parent="aaa_test_son"/>

